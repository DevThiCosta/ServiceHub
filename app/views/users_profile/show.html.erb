<h1>User Profile</h1>

<% if @user %>
  <h2><%= @user.username %></h2>
  <p>Email: <%= @user.email %></p>
  <p>Age: <%= @user.birth_date %></p>
  <p>Address: <%= @user.address %></p>
  <p>Phone Number: <%= @user.phone_number %></p>
  <img src="<%= @user.avatar %>" alt="Avatar">

  <!-- Add more user information here -->
<% else %>
  <p>User not found.</p>
<% end %>
